<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_edittext_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/custom_edittext_textcolor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@drawable/custom_edittext_cursor</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:maxLength">30</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>